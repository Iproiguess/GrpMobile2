<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".RequestCampaignActivity">

    <TextView
        android:id="@+id/tvRequestTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Request New Campaign"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <EditText
        android:id="@+id/etCampaignTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Campaign Title"
        android:inputType="textCapWords"
        app:layout_constraintTop_toBottomOf="@+id/tvRequestTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <EditText
        android:id="@+id/etCampaignDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Description (what's it for?)"
        android:inputType="textMultiLine"
        android:minLines="3"
        android:gravity="top"
        app:layout_constraintTop_toBottomOf="@+id/etCampaignTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"/>

    <EditText
        android:id="@+id/etCampaignLocation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Location (e.g., Downtown Library)"
        android:inputType="textPostalAddress"
        app:layout_constraintTop_toBottomOf="@+id/etCampaignDescription"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"/>

    <EditText
        android:id="@+id/etCampaignDate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Proposed Date (e.g., YYYY-MM-DD)"
        android:inputType="date"
        app:layout_constraintTop_toBottomOf="@+id/etCampaignLocation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"/>

    <EditText
        android:id="@+id/etContactEmail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Your Contact Email (for verification)"
        android:inputType="textEmailAddress"
        app:layout_constraintTop_toBottomOf="@+id/etCampaignDate"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"/>

    <!-- Image Preview -->
    <ImageView
        android:id="@+id/ivCampaignImagePreview"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="16dp"
        android:scaleType="centerCrop"
        android:src="@android:drawable/ic_menu_gallery"
        android:contentDescription="Campaign Image Preview"
        app:layout_constraintTop_toBottomOf="@+id/etContactEmail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Button to Select Image -->
    <Button
        android:id="@+id/btnSelectImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Image"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/ivCampaignImagePreview"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Donation Goal -->
    <EditText
        android:id="@+id/etDonationGoal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Donation Goal (e.g., 500)"
        android:inputType="numberDecimal"
        app:layout_constraintTop_toBottomOf="@+id/btnSelectImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <LinearLayout
        android:id="@+id/llButtons"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/etDonationGoal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintVertical_bias="1.0">

        <Button
            android:id="@+id/btnCancelRequest"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cancel"
            android:layout_marginEnd="8dp"/>

        <Button
            android:id="@+id/btnSubmitRequest"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Submit Request"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>